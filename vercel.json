{
  "framework": "vite",
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "pip install -r requirements.txt",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  }
}
